# Dockerfile for telegram-bot

FROM rust:1.75-slim as builder

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY rsworkspace ./rsworkspace/

# Build only telegram-bot
WORKDIR /app/rsworkspace
RUN cargo build --release --package telegram-bot

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Copy binary from builder
COPY --from=builder /app/rsworkspace/target/release/telegram-bot /usr/local/bin/telegram-bot

# Run as non-root user
RUN useradd -m -u 1000 trogonai
USER trogonai

ENTRYPOINT ["telegram-bot"]
