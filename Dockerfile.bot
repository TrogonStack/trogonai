# Dockerfile for telegram-bot
#
# Expected build context: rsworkspace/
# Binary must be pre-built: cargo build --release --package telegram-bot
# Build: docker build -f Dockerfile.bot -t telegram-bot rsworkspace/

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

COPY target/release/telegram-bot /usr/local/bin/telegram-bot

RUN useradd -m -u 1000 trogonai
USER trogonai

ENTRYPOINT ["telegram-bot"]
