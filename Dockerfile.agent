# Dockerfile for telegram-agent
#
# Expected build context: rsworkspace/
# Binary must be pre-built: cargo build --release --package telegram-agent
# Build: docker build -f Dockerfile.agent -t telegram-agent rsworkspace/

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

COPY target/release/telegram-agent /usr/local/bin/telegram-agent

RUN useradd -m -u 1000 trogonai
USER trogonai

ENTRYPOINT ["telegram-agent"]
